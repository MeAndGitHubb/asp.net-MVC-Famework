@model MyClass.Models.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreatedAt)
    @Html.HiddenFor(model => model.CreatedBy)

<div class="content-wrapper py-2">
    <!-- Content Header (Page header) -->
    <section class="content">
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Cập nhật tên người dùng</strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-sm btn-success" type="submit" name="edit"><i class="fas fa-save"></i> Lưu[Câp nhật]</button>
                        <a href="@Url.Action("Index", "User")" class="btn btn-sm btn-danger py-1"><i class="fas fa-backward"></i> Về danh sách</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label><strong>Họ và tên(<span class="text-danger">*</span>)</strong></label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Email(<span class="text-danger">*</span>)</strong></label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Số điện thoại(<span class="text-danger">*</span>)</strong></label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @type = "phone" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Tên đăng nhập(<span class="text-danger">*</span>)</strong></label>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @type = "username" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Mật khẩu(<span class="text-danger">*</span>)</strong></label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Xác nhận mật khẩu(<span class="text-danger">*</span>)</strong></label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label><strong>Giới tính(<span class="text-danger">*</span>)</strong></label>
                            @Html.DropDownListFor(model => model.Gender, new[] { new SelectListItem { Value = "Nam", Text = "Nam" }, new SelectListItem { Value = "Nữ", Text = "Nữ" } }, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label><strong>Xét quyền(<span class="text-danger">*</span>)</strong></label>
                            @Html.DropDownListFor(model => model.Roles, new[] { new SelectListItem { Value = "Admin", Text = "Administrator" }, new SelectListItem { Value = "Editor", Text = "Customer" } }, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label><strong>Hình đại diện(<span class="text-danger">*</span>)</strong></label>
                            <input type="file" class="form-control" name="img" />
                        </div>
                        <div class="form-group">
                            <label><strong>Trạng thái (<span class="text-danger">*</span>)</strong></label>
                            @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Value = "1", Text = "Xuất Bản" }, new SelectListItem { Value = "2", Text = "Chưa Xuất Bản" } }, new { @class = "form-control" })
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
}
