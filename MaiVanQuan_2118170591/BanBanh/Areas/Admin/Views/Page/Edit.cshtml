@model MyClass.Models.Post

@{
    ViewBag.Title = "Sửa trang đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("Create", "Page", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="content-wrapper py-2">
        <!-- Content Header (Page header) -->
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Sửa Bài Viết</strong>

                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-sm btn-success" type="submit" name="create"><i class="fas fa-save"></i> Lưu[Thêm]</button>
                            <a href="@Url.Action("Index", "Post")" class="btn btn-sm btn-danger py-1"><i class="fas fa-backward"></i> Về danh sách</a>

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label><strong>Tên trang đơn (<span class="text-danger">*</span>)</strong></label>
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><strong>Chi tiết trang đơn(<span class="text-danger">*</span>)</strong></label>
                                @Html.TextAreaFor(model => model.Detail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><strong>Từ khóa(<span class="text-danger">*</span>)</strong></label>
                                @Html.TextAreaFor(model => model.MetaKey, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><strong>Mô tả(<span class="text-danger">*</span>)</strong></label>
                                @Html.TextAreaFor(model => model.MetaDesc, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label><strong>Hình đại diện(<span class="text-danger">*</span>)</strong></label>
                                <input type="file" class="form-control" name="img" />
                            </div>
                            <div class="form-group">
                                <label><strong>Trạng thái (<span class="text-danger">*</span>)</strong></label>
                                @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Value = "1", Text = "Xuất Bản" }, new SelectListItem { Value = "2", Text = "Chưa Xuất Bản" } }, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>

}










