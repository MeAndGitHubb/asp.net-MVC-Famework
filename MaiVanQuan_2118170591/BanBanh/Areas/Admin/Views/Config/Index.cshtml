@model IEnumerable<MyClass.Models.Config>

@{
    ViewBag.Title = "Cấu Hình";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">TẤT CẢ DANH MỤC SẢN PHẨM</strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create", "Config")" class="btn-btn-sm btn-success py-1 mb-1"><i class="fas fa-plus"></i> Thêm</a>
                        <a href="@Url.Action("Trash", "Config")" class="btn-btn-sm btn-danger py-1"><i class="fas fa-trash"></i> Thùng rác</a>


                    </div>
                </div>



            </div>
            <div class="card-body">
                <table class="table table bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>
                                Tên Danh Mục
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Value)
                            </th>

                            <th>
                                Chức Năng
                            </th>
                            <th>
                                ID
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <input type="checkbox" name="checkId" value="" />

                            </td>
                            <td>@item.Name</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>

                            <td>
                                @if (item.Value == null)
                                {
                                    <a href="@Url.Action("Name", "Config",new { id = item.Id })" class="btn btn-sm btn-success  "><i class="fas fa-toggle-on"></i> </a>

                                }
                                else
                                {
                                    <a href="@Url.Action("Name", "Config",new { id = item.Id })" class="btn btn-sm btn-danger  "><i class="fas fa-toggle-off"></i> </a>

                                }

                                <a href="@Url.Action("Details", "Config",new { id = item.Id })" class="btn btn-sm bg-primary "><i class="fas fa-eye"></i> </a>
                                <a href="@Url.Action("Edit", "Config",new { id = item.Id })" class="btn btn-sm btn-info  "><i class="fas fa-edit"></i> </a>
                                <a href="@Url.Action("DelTrash", "Config",new { id = item.Id })" class="btn btn-sm btn-danger  "><i class="fas fa-trash"></i> </a>

                            </td>
                            <td>@item.Id</td>
                        </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

