                        <a href="@Url.Action("Edit", "Product",new { id = Model.Id })" class="btn btn-sm btn-success  "><i class="fas fa-edit"></i> </a>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-sm btn-danger py-1"><i class="fas fa-backward"></i> Về danh sách</a>


                    </div>
                </div>

            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px;"> Tên trường </th>
                        <th>Nội dung </th>
                    </tr>
                    <tr>


                        <td>@Html.DisplayNameFor(model => model.CatId)</td>
