                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.SuppId)</td>
                        <td>@Html.DisplayFor(model => model.SuppId)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Name)</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Slug)</td>
                        <td> @Html.DisplayFor(model => model.Slug)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.Img)</td>
                        <td> @Html.DisplayFor(model => model.Img)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Price)</td>
                        <td>@Html.DisplayFor(model => model.Price)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.PriceSale)</td>
                        <td>@Html.DisplayFor(model => model.PriceSale)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Detail)</td>
                        <td>@Html.DisplayFor(model => model.Detail)</td>
                    </tr>
                    <tr>
