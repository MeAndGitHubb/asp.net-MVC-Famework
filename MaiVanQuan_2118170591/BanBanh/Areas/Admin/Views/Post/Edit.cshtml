@model MyClass.Models.Post

@{
    ViewBag.Title = "Cập nhật bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Created_At)
    @Html.HiddenFor(model => model.Created_By)
<div class="content-wrapper py-2">
    <!-- Content Header (Page header) -->
    <section class="content">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">Thêm Bài Viết</strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-sm btn-success" type="submit" name="create"><i class="fas fa-save"></i> Lưu[Thêm]</button>
                        <a href="@Url.Action("Index", "Post")" class="btn btn-sm btn-danger py-1"><i class="fas fa-backward"></i> Về danh sách</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            <label><strong>Tên sản phẩm (<span class="text-danger">*</span>)</strong></label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Chi tiết bài viết(<span class="text-danger">*</span>)</strong></label>
                            @Html.TextAreaFor(model => model.Detail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Từ khóa(<span class="text-danger">*</span>)</strong></label>
                            @Html.TextAreaFor(model => model.MetaKey, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MetaKey, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label><strong>Mô tả(<span class="text-danger">*</span>)</strong></label>
                            @Html.TextAreaFor(model => model.MetaDesc, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MetaDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Loại </label>
                            @Html.DropDownListFor(model => model.Topid, (SelectList)ViewBag.ListTopic, "[--None--]", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Topid, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Hình</label>
                            <input name="img" type="file" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Trạng thái</label>
                            @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Không xuất bản", Value = "2" }, new SelectListItem { Text = "Xuất bản", Value = "1" } }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
}
