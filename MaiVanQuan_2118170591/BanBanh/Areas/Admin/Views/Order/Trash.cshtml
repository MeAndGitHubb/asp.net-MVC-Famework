@model MyClass.Models.Order

@{
    ViewBag.Title = "Thùng rác danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header {

    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {

    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">THÙNG RÁC DANH MỤC SẢN PHẨM</strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index", "Order")" class="btn btn-sm btn-danger py-1"><i class="fas fa-backward"></i> Về danh sách</a>


                    </div>
                </div>



            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id=" myTable">
                    <thead>
                        <tr>
                            <th class=" text-center" style="width:20px;">#</th>
                            <th>
                                Tên Khách Hàng
                            </th>
                            <th>
                                Slug
                            </th>

                            <th>
                                Ngày Tạo
                            </th>

                            <th class=" text-center" style="width:120px;">
                                Chức Năng
                            </th>
                            <th class=" text-center" style="width:20px;">
                                ID
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var ct in ViewBag.ListChiTiet)
                        {
                            <tr>
                                <td>@ct.ProductId</td>
                                <td><img src="~/Public/images/products/@Html.Action("ProductImg", "Product", new { product = ct.ProductId })" class="img-fluid" /></td>
                                <td>@Html.Action("ProductName", "Product", new { product = ct.ProductId })</td>
                                <td>@ct.Price</td>
                                <td>@ct.Qty</td>
                                <td>@ct.Amount</td>

                                <td class=" text-center">

                                    <a href="@Url.Action("Retrash", "Order")" class="btn btn-sm btn-info  "><i class="fas fa-reply-all"></i> </a>
                                    <a href="@Url.Action("Delete", "Order")" class="btn btn-sm btn-danger  "><i class="fas fa-trash"></i> </a>

                                </td>
                                <td>@ct.ProductId</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
    </div>
