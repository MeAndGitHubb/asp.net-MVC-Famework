@model MyClass.Models.Slider

@{
    ViewBag.Title = "Thêm nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-2">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">

                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Thêm nhà cung cấp</strong>

                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-sm btn-success" type="submit" name="create"><i class="fas fa-save"></i> Lưu[Thêm]</button>
                            <a href="@Url.Action("Index", "Slider")" class="btn btn-sm btn-danger py-1"><i class="fas fa-backward"></i> Về danh sách</a>

                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label> Tên Danh Mục Sản Phẩm</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>URL</label>
                                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })

                            </div>
                            <div class="form-group">
                                <label>Oder</label>
                                @Html.EditorFor(model => model.Orders, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })

                            </div>

                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Hình</label>
                                <input name="img" type="file" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label></label>
                                @Html.DropDownListFor(model => model.Position, new[] { new SelectListItem { Value = "Slideshow", Text = "Slideshow" } }, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Trạng thái</label>
                                @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Text = "Không xuất bản", Value = "2" }, new SelectListItem { Text = "Xuất bản", Value = "1" } }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>




                </div>
            </div>
            <!-- /.card -->

        </section>
    </div>
    <!-- /.content -->
    <!-- /.content-wrapper -->
}

