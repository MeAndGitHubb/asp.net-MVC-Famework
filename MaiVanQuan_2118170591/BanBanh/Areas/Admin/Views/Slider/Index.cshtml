@model IEnumerable<MyClass.Models.Slider>

@{
    ViewBag.Title = "Tất cả nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header {

    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {

    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">

                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">TẤT CẢ NHÀ CUNG CẤP</strong>

                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Create", "Slider")" class="btn btn-sm btn-success "><i class="fas fa-plus"></i> Thêm</a>
                        <a href="@Url.Action("Trash", "Slider")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Thùng rác</a>


                    </div>
                </div>



            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class=" text-center" style="width:20px;">#</th>
                            <th style=" width:50px;">Hình</th>
                            <th>Tên Slider</th>
                            <th> URL</th>
                            <th>Oder </th>
                            <th>Ngày Tạo</th>
                            <th class=" text-center" style="width:200px;">
                                Chức Năng
                            </th>
                            <th class=" text-center" style="width:20px;">
                                ID
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="checkId" value="" />

                                </td>
                                <td>
                                    <img src="~/Public/images/sliders/@item.Img" class="img-fluid" alt="Img" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Url</td>
                                <td>@item.Orders</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created_At)
                                </td>

                                <td class=" text-center">
                                    @if (item.Status == 1)
                                    {
                                        <a href="@Url.Action("Status", "Slider",new { id = item.Id })" class="btn btn-sm btn-success  "><i class="fas fa-toggle-on"></i> </a>

                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status", "Slider",new { id = item.Id })" class="btn btn-sm btn-danger  "><i class="fas fa-toggle-off"></i> </a>

                                    }
                                    <a href="@Url.Action("Details", "Slider",new { id = item.Id })" class="btn btn-sm bg-primary "><i class="fas fa-eye"></i> </a>
                                    <a href="@Url.Action("Edit", "Slider",new { id = item.Id })" class="btn btn-sm btn-info  "><i class="fas fa-edit"></i> </a>
                                    <a href="@Url.Action("DelTrash", "Slider",new { id = item.Id })" class="btn btn-sm btn-danger  "><i class="fas fa-trash"></i> </a>

                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <!-- /.card -->

    </section>
</div>
<!-- /.content -->
<!-- /.content-wrapper -->
