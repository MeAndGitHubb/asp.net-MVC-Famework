@model MyClass.Models.Menu

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Header (Page header) -->
@using (Html.BeginForm("Edit", "Menu", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Created_At)
    @Html.HiddenFor(model => model.Created_By)
    @Html.HiddenFor(model => model.TypeMenu)
    @Html.HiddenFor(model => model.TableId)
    <div class="content-wrapper py-2">
        <!-- Content Header (Page header) -->
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">Thêm Bài Viết</strong>

                        </div>
                        <div class="col-md-6 text-right">
                            <button class="btn btn-sm btn-success" type="submit" name="create"><i class="fas fa-save"></i> Lưu[Thêm]</button>
                            <a href="@Url.Action("Index", "Post")" class="btn btn-sm btn-danger py-1"><i class="fas fa-backward"></i> Về danh sách</a>

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-9">
                            @if (Model.TypeMenu.Equals("custom"))
                            {
                                <div class="form-group">
                                    <label><strong>Tên Menu(<span class="text-danger">*</span>)</strong></label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label><strong>Liên kết(<span class="text-danger">*</span>)</strong></label>
                                    @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <label><strong>Tên Menu(<span class="text-danger">*</span>)</strong></label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <label><strong>Liên kết(<span class="text-danger">*</span>)</strong></label>
                                    @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                    @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                                </div>
                            }
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label><strong>Vị trí(<span class="text-danger">*</span>)</strong></label>
                                @Html.DropDownListFor(model => model.Position, new[] { new SelectListItem { Value = "mainmenu", Text = "MAIN MENU" }, new SelectListItem { Value = "footermenu", Text = "FOOTER MENU" } }, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><strong>Cấp cha (<span class="text-danger">*</span>)</strong></label>
                                @Html.DropDownListFor(model => model.ParentId, (SelectList)ViewBag.ListMenu, "Chọn", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label><strong>Thứ tự: (<span class="text-danger">*</span>)</strong></label>
                                @Html.DropDownListFor(model => model.Orders, (SelectList)ViewBag.ListOrder, "Chọn", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Orders, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <label><strong>Trạng thái (<span class="text-danger">*</span>)</strong></label>
                                    @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem { Value = "1", Text = "Xuất Bản" }, new SelectListItem { Value = "2", Text = "Chưa Xuất Bản" } }, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </section>
        <!-- /.content -->
    </div>

    <!-- /.content -->
}












