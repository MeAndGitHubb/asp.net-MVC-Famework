@model MyClass.Models.User
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@using (Html.BeginForm("DangKy", "Khachhang", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section class="maincontent clearfix ">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="login-box">
                            <div class="card card-outline card-primary">
                                <div class="card-body">
                                    <div class="form-group mb-2">
                                        <label><strong>Họ và tên(<span class="text-danger">*</span>)</strong></label>
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-2">
                                        <label><strong>Email(<span class="text-danger">*</span>)</strong></label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-2">
                                        <label><strong>Số điện thoại(<span class="text-danger">*</span>)</strong></label>
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @type = "phone" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-2">
                                        <label><strong>Tên đăng nhập(<span class="text-danger">*</span>)</strong></label>
                                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @type = "username" } })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-2">
                                        <label><strong>Mật khẩu(<span class="text-danger">*</span>)</strong></label>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-2">
                                        <label><strong>Xác nhận mật khẩu(<span class="text-danger">*</span>)</strong></label>
                                        @Html.EditorFor(model => model.ConfimPassword, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.ConfimPassword, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="row">

                                        <div class="col-12 login-box">
                                            <button href="~/" type="submit" class="btn btn-dark">Đăng Ký</button>
                                        </div>
                                        <div class="col-md-6 ">
                                            <a href="~/dang-nhap" class="">
                                                <i class="fas fa-backward">Quay lại</i>
                                            </a>
                                        </div>
                                        <div class="form-group my-2">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        
                    
                </div>
                
            </div>

    </section>


}


