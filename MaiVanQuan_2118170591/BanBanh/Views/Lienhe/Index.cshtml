<body>
    <section class="contact" >
        <div class="container">
            <div class="row">
                <div class="col-xl-6 mx-auto text-center">
                    <div class="section-title mb-100">
                        <h4>Liên Hệ</h4>
                    </div>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-8">
                    <form action="#" class="contact-form">
                        <div class="row">
                            <div class="col-xl-6">
                                <input  type="text" placeholder="Tên">
                            </div>
                            <div class="col-xl-6">
                                <input  type="text" placeholder="email">
                            </div>
                            <div class="col-xl-6">
                                <input  type="text" placeholder="Số điện Thoại">
                            </div>
                            <div class="col-xl-12">
                                <textarea placeholder="Nội dung" cols="30" rows="10"></textarea>
                                <input class="text-white" type="submit" value="Gửi Tin Đi">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-4">
                    <div class="single-contact">
                        <i class="fa fa-map-marker"></i>
                        <h5 class="text-black">Address</h5>
                        <p class="text-black">60 Man Thiện, Hiệp Phú ,Q9,TP.HCM.</p>
                    </div>
                    <div class="single-contact">
                        <i class="fa fa-phone"></i>
                        <h5 class="text-black">Phone</h5>
                        <p class="text-black">(+84)948839196</p>
                    </div>
                    <div class="single-contact">
                        <i class="fa fa-envelope"></i>
                        <h5 class="text-black">Email</h5>
                        <p class="text-black">ironvit0110@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
